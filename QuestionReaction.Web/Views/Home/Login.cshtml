@model QuestionReaction.Web.Models.LoginVM
@{
    ViewData["Title"] = "Connexion";
}

<div class="text-center">
    <h1 class="display-4_5">Connexion</h1>
</div>

<hr />

<div class="col-6 m-auto justify-content-around">
    <form asp-action="Login">
        <input type="hidden" name="returnUrl" id="returnUrl" value="@Model.ReturnUrl" />
        <div class="form-group">
            <label asp-for="Login" class="col-form-label col-form-label-lg"></label>
            <input asp-for="Login" class="form-control form-control-lg">
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-form-label col-form-label-lg"></label>
            <input asp-for="Password" class="form-control form-control-lg">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group form-check form-row">
            <input asp-for="RememberMe" type="checkbox" class="form-check-input">
            <label asp-for="RememberMe" class="form-check-label col-form-label-lg"></label>
        </div>
        <div class="form-row ml-auto">
            <button type="submit" class="btn btn-dark btn-lg ml-auto">Connexion</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}