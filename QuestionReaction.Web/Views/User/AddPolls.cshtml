@model QuestionReaction.Services.Models.UserAddPollsVM
@{
    ViewData["Title"] = "Création sondages";
}

<div class="text-center">
    <h1 class="display-4_5">Création sondages</h1>
</div>

<hr />

<div class="col-6 m-auto justify-content-around">
    <form asp-action="AddPolls" method="post">
        <input type="hidden" name="currentUserId" id="currentUserId" value="@Model.CurrentUserId" />
        <div class="form-group">
            <label asp-for="Title" class="col-form-label col-form-label-lg"></label>
            <input asp-for="Title" class="form-control form-control-lg">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-form-label col-form-label-lg"></label>
            <textarea asp-for="Description" class="form-control form-control-lg" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group form-check form-row">
            <input asp-for="MutipleChoices" type="checkbox" class="form-check-input">
            <label asp-for="MutipleChoices" class="form-check-label col-form-label-lg"></label>
        </div>
        <div>
            <label class="col-form-label col-form-label-lg">Liste de choix</label>
            @for (var i = 1; i <= 5; i++)
           {
            <div class="form-group">
                <label asp-for="Choice_@i" class="col-form-label col-form-label-lg"></label>
                <input asp-for="Choice_@i" class="form-control form-control-lg">
                <span asp-validation-for="Choice_@i" class="text-danger"></span>
            </div>
           }
        </div>
        <div class="form-row ml-auto">
            <button type="button" class="btn btn-dark btn-lg ml-auto">Annuler</button>
            <button type="submit" class="btn btn-dark btn-lg ml-1">Valider</button>
        </div>
    </form>
</div>