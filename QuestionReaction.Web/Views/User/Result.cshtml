@model QuestionReaction.Web.Models.ResultVM
@{
    ViewData["Title"] = "Résultats - " + @Model.Question.Title;
}


<div class="row">
    <div class="col-2"></div>
    <div class=" col-8 text-center">
        <h1 class="display-4.5">@Model.Question.Title</h1>
    </div>
    <div class="col-2 text-right align-text-bottom">
        <label class="display-6">@Model.DistinctUserNumber <img src="~/lib/ressources/user.png" class="img-icon-size" /></label>
    </div>
</div>

<hr />

<div class="col-6 m-auto justify-content-around">
    <div class="border rounded-lg">
        <table class="table table-sm table-borderless">

            <tbody class="col-12">
                @foreach (var choice in Model.SortedChoices)
                {
                    <tr class="d-flex">
                        <td class="flex-grow-1">
                            <label>@choice.Content</label>
                            <hr class="no-margin" />
                        </td>
                        <td class="mx-1">
                            <label class="display-6">@choice.Reactions.Count <img src="~/lib/ressources/user.png" class="img-icon-size" /></label>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
